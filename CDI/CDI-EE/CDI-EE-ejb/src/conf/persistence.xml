<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CDIPU" transaction-type="JTA">
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>es.uma.informatica.sii.cdi.entidades.Actividad</class>
    <class>es.uma.informatica.sii.cdi.entidades.Alumno</class>
    <class>es.uma.informatica.sii.cdi.entidades.Asignatura</class>
    <class>es.uma.informatica.sii.cdi.entidades.Informe</class>
    <class>es.uma.informatica.sii.cdi.entidades.Inscripcion</class>
    <class>es.uma.informatica.sii.cdi.entidades.ONG</class>
    <class>es.uma.informatica.sii.cdi.entidades.PAS</class>
    <class>es.uma.informatica.sii.cdi.entidades.PDI</class>
    <class>es.uma.informatica.sii.cdi.entidades.Proyecto</class>
    <class>es.uma.informatica.sii.cdi.entidades.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="javax.persistence.sql-load-script-source" value="resources/data.sql"/>
    </properties>
  </persistence-unit>
</persistence>
